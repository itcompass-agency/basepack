# Docker Container Configuration
# This file contains only Docker-specific settings

# Database Configuration for Docker
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_OUTER_PORT=3306

# Redis Configuration for Docker
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
REDIS_PORT=6379
# SECURITY: Redis port should NOT be exposed publicly in production
# REDIS_OUTER_PORT removed for security

# Cache & Session Drivers
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
BROADCAST_DRIVER=redis

# Web Ports
WEB_PORT_HTTP=80
WEB_PORT_SSL=443

# Xdebug Configuration
XDEBUG_CONFIG=main

# InnoDB Configuration
INNODB_USE_NATIVE_AIO=1

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=basepack